<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/collapse_expanded_searching_for_peers_image_button"
                style="@style/ImageButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/collapse_searching_for_peers_content_description"
                android:src="@drawable/arrow_down"
                app:layout_constraintEnd_toStartOf="@+id/expanded_searching_for_peers_information_searching_for_peers_text_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/expanded_searching_for_peers_information_searching_for_peers_text_view"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:text="@string/searching_for_peers_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintEnd_toStartOf="@+id/expanded_searching_for_peers_information_stop_search_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/collapse_expanded_searching_for_peers_image_button"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expanded_searching_for_peers_information_stop_search_button"
                style="@style/ImageButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/collapse_searching_for_peers_content_description"
                android:src="@drawable/close_icon_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/expanded_searching_for_peers_information_searching_for_peers_text_view"
                app:layout_constraintTop_toTopOf="parent" />


            <com.salesground.zipbolt.ui.customviews.SearchingForDevicesAnimatedView
                android:id="@+id/expanded_searching_for_peers_information_searching_for_devices_animation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/expanded_searching_for_peers_information_discovered_peers_recycler_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expanded_searching_for_peers_information_searching_for_peers_text_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/expanded_searching_for_peers_information_discovered_peers_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/expanded_searching_for_peers_information_searching_for_devices_animation"
                app:layout_constraintTop_toTopOf="@id/expanded_searching_for_peers_information_searching_for_devices_animation" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>