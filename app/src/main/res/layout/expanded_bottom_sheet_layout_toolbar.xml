<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/expanded_bottom_sheet_layout_toolbar_collapse_bottom_sheet_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/collapse_searching_for_peers_content_description"
        android:src="@drawable/arrow_down" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/expanded_bottom_sheet_layout_toolbar_title_text_view"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:lines="1"
        android:text="@string/device_connection_details"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/expanded_bottom_sheet_layout_toolbar_cancel_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/collapse_searching_for_peers_content_description"
        android:src="@drawable/close_icon_24" />
</LinearLayout>