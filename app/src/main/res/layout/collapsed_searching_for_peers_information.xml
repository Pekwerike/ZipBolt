<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.salesground.zipbolt.ui.customviews.ConstraintLayoutWithTopBorderLine
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_height="match_parent">

        <com.salesground.zipbolt.ui.customviews.SearchingForDevicesAnimatedView
            android:id="@+id/medium_searching_for_peers_animation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/collapsed_searching_for_peers_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="4dp"
            android:text="Searching for peers"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toTopOf="@+id/materialTextView"
            app:layout_constraintStart_toEndOf="@id/medium_searching_for_peers_animation"
            app:layout_constraintTop_toTopOf="@+id/medium_searching_for_peers_animation"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="2dp"
            android:paddingHorizontal="4dp"
            android:text="0 devices found"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="@+id/medium_searching_for_peers_animation"
            app:layout_constraintStart_toEndOf="@+id/medium_searching_for_peers_animation"
            app:layout_constraintTop_toBottomOf="@+id/collapsed_searching_for_peers_label" />

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/ImageButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/stop_searching_for_peers_content_description"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/close_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </com.salesground.zipbolt.ui.customviews.ConstraintLayoutWithTopBorderLine>
</layout>
