<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="dataDisplayName"
            type="String" />

        <variable
            name="dataTransferPercent"
            type="Integer" />

        <variable
            name="dataTransferPercentAsString"
            type="String" />

        <variable
            name="dataSize"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ongoing_data_receive_layout_item_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/ongoing_data_receive_data_category_image_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/background_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ongoing_data_receive__layout_image_view"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_startup_outline_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </com.facebook.shimmer.ShimmerFrameLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ongoing_data_receive_layout_data_display_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:lines="1"
            android:paddingBottom="@dimen/standard_text_view_padding"
            android:text="@{dataDisplayName}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toTopOf="@+id/ongoing_data_receive_layout_linear_progress_indicator"
            app:layout_constraintEnd_toStartOf="@id/ongoing_data_receive_layout_cancel_transfer_image_button"
            app:layout_constraintStart_toEndOf="@id/ongoing_data_receive_data_category_image_shimmer"
            app:layout_constraintTop_toTopOf="@id/ongoing_data_receive_data_category_image_shimmer" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/ongoing_data_receive_layout_linear_progress_indicator"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginVertical="4dp"
            android:progress="@{dataTransferPercent}"
            app:layout_constraintBottom_toTopOf="@+id/ongoing_data_receive_layout_item_data_size_text_view"
            app:layout_constraintEnd_toStartOf="@id/ongoing_data_receive_layout_item_transfer_percentage_text_view"
            app:layout_constraintStart_toStartOf="@+id/ongoing_data_receive_layout_data_display_name"
            app:showAnimationBehavior="outward"
            app:trackThickness="6dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ongoing_data_receive_layout_item_transfer_percentage_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="@{dataTransferPercentAsString}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="@id/ongoing_data_receive_layout_linear_progress_indicator"
            app:layout_constraintEnd_toStartOf="@id/ongoing_data_receive_layout_cancel_transfer_image_button"
            app:layout_constraintStart_toEndOf="@id/ongoing_data_receive_layout_linear_progress_indicator"
            app:layout_constraintTop_toTopOf="@id/ongoing_data_receive_layout_linear_progress_indicator" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ongoing_data_receive_layout_cancel_transfer_image_button"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginVertical="4dp"
            android:layout_marginLeft="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/close_icon"
            app:layout_constraintBottom_toBottomOf="@+id/ongoing_data_receive_data_category_image_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ongoing_data_receive_data_category_image_shimmer" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ongoing_data_receive_layout_item_data_size_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@{dataSize}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="@+id/ongoing_data_receive_data_category_image_shimmer"
            app:layout_constraintStart_toStartOf="@id/ongoing_data_receive_layout_linear_progress_indicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
